<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cashbus.android.bamboo">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".activitys.BambooApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activitys.MainActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activitys.MyActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".activitys.WebviewActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".activitys.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".activitys.NewerCourseActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".activitys.ForgetPwdActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:launchMode="singleTask"
            android:name=".activitys.SmsLoginActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>