<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/root"
    android:background="@drawable/dialog_white_r5"
    android:layout_marginLeft="@dimen/public_space_value_24"
    android:layout_marginRight="@dimen/public_space_value_24"
    android:paddingBottom="@dimen/public_space_value_24"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:paddingTop="@dimen/public_space_value_11"
        android:id="@+id/tipTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#7e7e7e"
        android:textSize="@dimen/public_textsize_value_14"
        android:text="请填写验证码，稍后您将收到来自竹子理财的验证码，请注意查收。"
        android:paddingBottom="@dimen/public_space_value_9"
        android:background="@drawable/dialog_ededed_r5_top"
        android:paddingLeft="@dimen/public_space_value_20"
        android:paddingRight="@dimen/public_space_value_20"/>

    <LinearLayout
        android:id="@+id/sms_captcha_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/public_space_value_20"
        android:layout_marginLeft="@dimen/public_space_value_20"
        android:layout_marginTop="@dimen/public_space_value_25"
        android:background="@drawable/bg_white_r2_b97979"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <com.cashbus.android.bamboo.views.ExtendClearEditText
            android:paddingTop="@dimen/public_space_value_15"
            android:paddingBottom="@dimen/public_space_value_15"
            android:id="@+id/captcha"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/public_space_value_5"
            android:layout_weight="2"
            android:hint="请输入验证码"
            android:inputType="text"
            android:maxLines="1"
            android:background="@null"
            android:singleLine="true"
            android:textColor="#979797"
            android:textColorHint="#979797"
            android:textSize="@dimen/public_textsize_value_18" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#979797"/>
        <ImageView
            android:id="@+id/imageCaptcha"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <TextView
        android:layout_marginRight="@dimen/public_space_value_20"
        android:id="@+id/captchaHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="看不清楚，点击切换"
        android:layout_marginBottom="@dimen/public_space_value_5"
        android:layout_marginTop="@dimen/public_space_value_5"
        android:textColor="#e990e2"
        android:textSize="@dimen/public_textsize_value_12" />


    <Button
        android:id="@+id/btnOk"
        android:layout_marginTop="@dimen/public_space_value_5"
        android:layout_marginRight="@dimen/public_space_value_22"
        android:layout_marginLeft="@dimen/public_space_value_22"
        android:text="确定"
        android:textColor="@android:color/white"
        android:textSize="@dimen/public_textsize_value_18"
        android:background="@drawable/btn_bamboo_r5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>